<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEventActivity">


    <Button
        android:id="@+id/CreateEvent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="133dp"
        android:layout_marginRight="133dp"
        android:layout_marginBottom="53dp"
        android:text="Create Event"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CreateEvent_linearLayout" />

    <TextView
        android:id="@+id/Edit_Title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Create a New Event"
        android:textStyle="bold"
        android:textColor="#96020202"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <LinearLayout
        android:id="@+id/CreateEvent_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/CreateEvent_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Title_textView">

        <EditText
            android:id="@+id/CreateEvent_EventTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#96020202"
            android:drawablePadding="16dp"
            android:hint="Event Title"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#96020202"
            android:textColorHint="#96020202"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start DateTime:"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/CreateEvent_StartDate"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="DD/MM/YYYY"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/CreateEvent_StartTime"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="HH:MM"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End DateTime:"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/CreateEvent_EndDate"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="DD/MM/YYYY"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/CreateEvent_EndTime"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="HH:MM"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

        </RelativeLayout>

        <EditText
            android:id="@+id/CreateEvent_MaxParticpants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="20sp"
            android:hint="Maximum Participants"
            android:inputType="number"
            android:textColor="#96020202"
            android:textColorHint="#96020202"
            android:textSize="20sp" />

        <Button
            android:id="@+id/CreateEvent_MapButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add destination location"
            app:backgroundTint="#4CAF50" />

        <EditText
            android:id="@+id/CreateEvent_Description"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/textview_boarder_dark"
            android:drawablePadding="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="  Please describe the event you create here"
            android:inputType="textMultiLine"
            android:textColor="#96020202"
            android:textColorHint="#96020202"
            android:textSize="16sp" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>